<div class="details-field">
    <div class="key">Prompt:</div>
    <div class="value app-text">{{essay_prompt}}</div>
</div>
<div class="details-field">
    <div class="key">Audience:</div>
    <div class="value app-text">{{audience}}</div>
</div>
<div class="details-field">
    <div class="key">Context:</div>
    <div class="value app-text">{{context}}</div>
</div>

<div class="details-field">
    <div class="key">Next Due Date:</div>
    {{form-date date=due_date}}
</div>

<div class="details-field">
    <div class="key">Number of Revisions:</div>
    {{form-number value=num_of_drafts min=0 max=20}}
</div>

{{#if is_completed}}
    <button {{action 'reviewDraft' recentDraft}}>View Final Draft</button>
{{else}}
{{#if draft_ready_for_review}}
    <button {{action 'reviewDraft' recentDraft}}>Review Draft</button>
{{/if}}
{{/if}}
