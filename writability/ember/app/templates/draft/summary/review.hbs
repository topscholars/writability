<div class="panel-title">Review</div>

{{#if essay_is_completed}}
  {{rubric-final rubric=rubric}}
  <p>Review Comment:</p>
  <p>{{currentReview.text}}</p>
{{else}}
  {{rubric-container reviewMode=reviewMode rubric=rubric}}

  <br />
  <p>Review Comment:<p>
  {{#if reviewMode}}
      {{textarea class="review-editor" value=review.text}}
  {{else}}
      <p>{{currentReview.text}}</p>
  {{/if}}
{{/if}}
