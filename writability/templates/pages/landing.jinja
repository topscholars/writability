{% extends "layout.jinja" %}

{% block title %}Writability{% endblock %}

{% block page_css %}
<!-- <link type="text/css" rel="stylesheet" href="/static/css/pages/landing.css" /> -->
{% endblock%}

{% block content %}
<header id="header" class="landing-header">
  <div class="header-left-group header-title"><div class="icon"></div></div>
  <div class="header-right-group header-title">
    <a class="header-link login-modal-toggle" >Login</a>
  </div>
</header>

<div id="layout-container">
  <div id="landing-layout" class="layout">
    <section id="landing-module" class="module">
      <div class="landing-content">
        <div class="landing-logo"></div>
        <p>Need help with you're writing? We'll work with you on your writing
        technique and also help you craft a great college application essay.
        </p>
        <button class="button sign-up-modal-toggle">Sign Up</button>
      </div>
    </section>
  </div>
</div>

<div id="register-modal" class="modal-container">
  <section id="register-modal-module" class="landing-modal module">
    <div class="modal-content">
      <div class="modal-title">Sign Up</div>
      <button class="close-button">X</button>
      <form action="/register" method="POST" name="register_user_form">
        {{ form.hidden_tag() }}
        <ol>
          <li>
            <input name="first_name" class="double-column" placeholder="First Name" />
            <input name="last_name" class="double-column" placeholder="Last Name" />
          </li>
          <li>
            <input name="email" type="email" class="single-column" placeholder="Email" />
          </li>
          <li>
            <input name="password" type="password" class="double-column" placeholder="Password" />
            <input name="password_confirm" type="password"
            class="double-column" placeholder="Retype Password" />
          </li>
          <li>
            <label class="double-column">
              Are you a teacher?<input type="checkbox" name="roles" />
            </label>
            <button name="submit" type="submit" value="Register" class="double-column">Create Account &gt;</button>
          </li>
        </ol>
      </form>
    </div>
  </section>
</div>

<div id="login-modal" class="modal-container">
  <section id="login-modal-module" class="landing-modal module">
    <div class="modal-content">
      <div class="modal-title">Log In</div>
      <button class="close-button">X</button>
      <form action="/login" method="POST" name="login_form">
        {{ form.hidden_tag() }}
        <ol>
          <li>
            <input name="email" type="email" class="single-column" placeholder="Email" />
          </li>
          <li>
            <input name="password" type="password" class="single-column" placeholder="Password" />
          </li>
          <li>
            <button name="submit" type="submit" value="Login" class="single-column">Login &gt;</button>
          </li>
        </ol>
      </form>
    </div>
  </section>
</div>
{% endblock %}

{% block scripts %}
<script src="/static/libs/jquery/dist/jquery.min.js"></script>
<script src="/static/landing/landing.js"></script>

{% endblock %}
